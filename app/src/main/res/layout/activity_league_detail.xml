<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_dark"
        tools:context=".mvp.view.activity.LeagueDetail">


    <ImageView
            android:id="@+id/banner_league"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            tools:src="@tools:sample/backgrounds/scenic"
            android:scaleType="center"/>

    <ImageView
            android:id="@+id/poster_league"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/banner_league"
            android:layout_marginStart="18dp"
            tools:src="@tools:sample/avatars"/>

    <TextView
            android:id="@+id/name_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/league_name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_below="@id/banner_league"
            android:layout_toEndOf="@id/poster_league"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/poster_league"
            android:layout_marginTop="16dp"
            android:layout_marginStart="18dp">

        <TextView
                android:id="@+id/desc_league"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Description"
                android:textColor="@android:color/white"/>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>